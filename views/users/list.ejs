<%- include('../partials/header') %>

    <div class="container">
        <h2 class="text-center mb-4"><strong>BREAD (Browse, Read, Edit, Add, Delete)</strong></h2>

        <div class="search-card">
            <%- include('search') %>
        </div>

        <table id="table" class="table table-striped table-hover">
            <thead>
                <tr class="table-dark">
                    <th>No.</th>
                    <th>String</th>
                    <th>Integer</th>
                    <th>Float</th>
                    <th>Date</th>
                    <th>Boolean</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <% data.forEach((item, index)=> { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= item.string %>
                        </td>
                        <td>
                            <%= item.integer %>
                        </td>
                        <td>
                            <%= item.float %>
                        </td>
                        <td>
                            <%= item.date ? moment(item.date).format('DD MMMM YYYY') : 'kosong' %>
                        </td>
                        <td>
                            <%= item.boolean %>
                        </td>
                        <td>
                            <a href="/edit/<%= item._id %>" class="btn btn-success"><i
                                    class="fa-solid fa-pen-to-square"></i></a>

                            <a href="/delete/<%= item._id %>"
                                onclick="return confirm('Are you sure you want to delete this data?')"
                                class="btn btn-danger ml-1"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <div>
                <a class="btn btn-primary" href="/add"><i class="fa-solid fa-plus"></i></a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>